{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,                    /* will issue an error whenever it would have inferred any:*/ 
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/home-work/**/*.ts"],
  "exclude": [
        "node_modules",
        "build",
        "lib",
        "test",
        "public"
  ]
}

